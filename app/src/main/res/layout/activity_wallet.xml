<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    tools:context=".WalletActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:focusableInTouchMode="true"
        android:src="@drawable/ranoli_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn_wallet_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:tint="@color/black"
            android:src="@drawable/back_arrow_icon"
            android:focusableInTouchMode="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Money to Foody Wallet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance  ₹"
                android:textColor="@color/black"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/Rupees_show_text_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="1dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/Amount_input_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:hint="₹ Amount"
            android:textSize="28sp"
            android:textColorHint="#696969"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/proceed_btn_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FECE2F"
            android:text="Proceed"
            android:textColor="@color/black"
            app:backgroundTint="#FECE2F" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusableInTouchMode="true">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/copyright_text_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright © Kuldeep sahu | All right reserved | 2021"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="#525252"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
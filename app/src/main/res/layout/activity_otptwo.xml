<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".OTPActivityTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/back_btn_otp_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:tint="@color/black"
            android:src="@drawable/back_arrow_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:text="Co\nde"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="100sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bungee"
            android:includeFontPadding="false"
            android:text="Verification"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/antic"
                android:includeFontPadding="false"
                android:text="Enter One Time Password Sent On Your"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#696969"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_show_otp_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="+91 0000000000"
                android:textColor="#696969"
                android:fontFamily="@font/baloo"
                android:includeFontPadding="false"
                android:textSize="20sp" />

        </LinearLayout>

        <com.chaos.view.PinView
            android:id="@+id/PinView_two"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="@color/cardview_light_background"
            app:cursorColor="@color/black"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="45dp"
            app:itemRadius="5dp"
            app:itemWidth="45dp"
            app:lineColor="@color/black" />

        <Button
            android:id="@+id/verify_btn_otp_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="#FECE2F"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="Verify"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:backgroundTint="#FECE2F" />

        <Button
            android:id="@+id/resend_otp_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:elevation="0dp"
            android:focusableInTouchMode="true"
            android:text="Resend OTP"
            android:textAllCaps="false"
            android:textColor="#000"
            android:transitionName="lock_tra_img"
            app:backgroundTint="#00000000" />

    </LinearLayout>

</ScrollView>